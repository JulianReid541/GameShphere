@model List<Post>
@{
    ViewData["Title"] = "PostList";
}

<h1>Posts</h1>
@if (Model.Count <= 0)
{
    <div>
        You haven't posted anything yet
    </div>
}
@if (Model.Count > 0)
{
    @foreach (Post p in Model)
    {
        <div>
            @ViewBag.user<text>: </text> @p.Message
        </div>
    }
}