@model GameSphere.Models.User
@{
    ViewData["Title"] = "PostList";
}

<h1>Posts</h1>
@if (Model.Posts.Count <= 0)
{
    <div>
        You haven't posted anything yet
    </div>
}
@if (Model.Posts.Count > 0)
{
    @foreach (Post p in Model.Posts)
    {
        <div>
            @ViewBag.user<text>: </text> @p.Message
        </div>
    }
}